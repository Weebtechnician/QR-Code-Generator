<%- include('partials/header') %>

<main>
    <section>
        <div class="container">
            <h1>QR Code Generator</h1>
            <div class="form-container">
                <h2>Enter a URL below to generate a QR code ðŸ‘‡</h2>
                <form action="/submit" method="POST" id="form">
                    <input type="text" name="url" value="<%- locals.userInput %>" placeholder="Enter a URL" required>
                    <input type="text" name="size" value="<%- locals.size %>" placeholder="Enter a size. Ex: 200x200">
                    <button type="submit">Generate QR Code</button>
                </form>
            </div>
            <div class="qr-code">
                <% if (!locals.qrCode) {%>
                <%- locals.content %> 
                <% } else { %>
                <img src="https://api.qrserver.com/v1/create-qr-code/?data=<%= locals.qrCode %>" alt="QR Code">
                <% } %>
            </div>
        </div>
    </section>
</main>




